---
//Constantes, COMP
const {nombre, periodo, actividades} = Astro.props;
---

<div class="trabajo">{nombre}</div>
      <div class="periodo">{periodo}</div>
      <ul>
        {actividades.map((actividad) => (
          <li>{actividad}</li>
        ))}
      </ul>

<style>
    .trabajo {
      font-weight: bold;
      margin-top: 10px;
      border-left: 4px solid #007BFF;
      padding-left: 8px;
      margin-bottom: 15px;
    }

    .periodo {
      color: #007BFF;
    }
</style>